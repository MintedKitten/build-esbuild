{
  "name": "build-esbuild",
  "version": "0.1.0",
  "description": "Build typescript files from source folder to build folder",
  "main": "./build/bin/index.js",
  "bin": {
    "build-esbuild": "./build/bin/index.js"
  },
  "scripts": {
    "test": "echo \"test\"",
    "build": "npm run build:esbuild && npm run build:cli",
    "build:esbuild": "esbuild src/esbuild.config.ts --format=esm --platform=node --outfile=build/esbuild.config.mjs --external:./node_modules/* --target=ESNEXT --minify --allow-overwrite",
    "build:cli": "esbuild src/bin/index.ts --format=esm --platform=node --outfile=build/bin/index.mjs --external:./node_modules/* --target=ESNEXT --minify --allow-overwrite"
  },
  "repository": {
    "type": "git",
    "url": "git@gitssh:MintedKitten/build-esbuild.git"
  },
  "keywords": [
    "typescript",
    "javascript",
    "esbuild"
  ],
  "author": "MintedKitten",
  "license": "MIT",
  "dependencies": {
    "acorn": "^8.8.2",
    "acorn-jsx": "^5.3.2",
    "esbuild": "^0.16.17",
    "esbuild-node-externals": "^1.6.0",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@types/node": "^18.11.19",
    "typescript": "^4.9.5"
  }
}
